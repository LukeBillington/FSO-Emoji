{
  "manifest_version": 2,

  "name": "FSO Tools",
  "description": "This improves Full Sail's FSO 4 by making modules easier to see and adding dark mode support and due assignment highlighting.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "fs.png"
  },

  "content_scripts": [{
    "run_at": "document_end",
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["https://online.fullsail.edu/*"]
  }]

}
